<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:name="rmfarc.tacoma.uw.edu.fragmentslabthethird.TeacherFragment"
        android:id="@+id/school_content_fragment_large_teacher"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        tools:layout="@layout/fragment_teacher">
    </fragment>

    <fragment
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:name="rmfarc.tacoma.uw.edu.fragmentslabthethird.StudentFragment"
        android:id="@+id/school_content_fragment_large_student"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        tools:layout="@layout/fragment_student">
    </fragment>

</LinearLayout>